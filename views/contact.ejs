<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS link -->
    <style>
        .center {
            display: flex;
            justify-content: center;
            padding-block: 1rem;
            gap: 1rem;
            background-color: khaki;
        }
        .center a {
            font-size: larger;
        }
    </style>
    <title><% title %> </title>
</head>
<body>
    <%- include('components/header') %> 
    <h1>Hello World</h1>
    <p>Welcome to my about page</p>
    <% if (contact.length < 1) { %>
        <p>Data contact is not available</p>
    <% } else { %>
        <table border="1" cellspacing="0" cellpadding="5">
            <thead>
                <% titles = ['No', 'Nama', 'Email'] %> 
                <% titles.forEach(head => { %>
                    <th><%= head %></th> 
                <% }); %> 
            </thead>
            <tbody>
                <% contact.forEach((row, i) => { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= row.name %></td>
                        <td><%= row.email %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>